            layout="@layout/fragment_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include layout="@layout/content_shpurchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <!-- Navigation Drawer -->

</android.support.v4.widget.DrawerLayout>
